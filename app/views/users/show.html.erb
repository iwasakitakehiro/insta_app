<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.user_name %>
      </h1>
      <div>
        <% if current_user?(@user) %>
          <%= link_to "Settings", edit_user_path(current_user) %>
        <% end %>
      </div>
      <div>
        <%if @user.introduction? %>
        <%= @user.introduction %>
        <% end %>
      </div>
      <div>
        <%if @user.web? %>
        <%=link_to @user.web, "#{@user.web}" %>
        <% end %>
      </div>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
</div>
<%= render 'follow_form' if logged_in? %>
<div>
<div class="row">
  <div class= "myposts">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <%= render 'users/my_post' %>
    <% end %>
  <div>
</div>
