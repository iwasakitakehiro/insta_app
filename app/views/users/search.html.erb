<h1>User search</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <table>
      <tbody>
        <div class="row">
          <div class="col-md-8">
            <ol class="microposts">
              <% @users.each do |user| %>
                <li>
                <div class= "gravatar">
                  <%= gravatar_for user, size: 50 %>
                </div>
                  <%= link_to user.user_name, user %>
                </li>
              <% end %>
            </ol>
        </div>
      </tbody>
    </table>
  </div>
</div>
