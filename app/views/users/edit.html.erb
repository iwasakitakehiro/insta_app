<% provide(:title, 'Edit user') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: 'form-control' %>
      
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>

      <%= f.label :self_introduction %>
      <%= f.text_field :introduction, class: 'form-control' %>

      <%= f.label :website %>
      <%= f.url_field :web, class: 'form-control' %>

      <p>非公開情報</p>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :phone_number %>
      <%= f.telephone_field :phone, class: 'form-control' %>

      <%= f.label :sex %>
      <%= f.select :sex, [["男", "man"],["女","woman"],["答えたくない","other"]], include_blank: '選択してください', class: 'form-control' %>

      <%= link_to "change password", new_password_reset_path %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Delete Account", @user , method: :delete,
                                        data: { confirm: "アカウントを削除します。よろしいですか？" } %>
  </div>
</div>