<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.user_name, micropost.user %></span>
  <span class="content"><%= link_to micropost.content, microposts_index_path(micropost) %></span>
  <span class="timestamp">
  <div id="like-btn-<%= micropost.id %>">
   <%= render 'likes/like', micropost: micropost %>
  </div>
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <div class="row">
    <ul>
        <li id="comments_area">
            <%= render 'comments/index', { micropost: micropost, comments: micropost.comments } %>
        </li>
    </ul>
    <hr>
    <% if logged_in? %>
        <div class="comment-create">
            <h3 class="text-left">レビューを投稿する</h3>
            <%= render 'comments/form', { micropost: micropost, comments: micropost.comments } %>
        </div>
    <% end %>
  </div>
</li>
