<% if micropost.liked_by?(current_user) %>

   <%= link_to(micropost_add_path(micropost), method: :delete, remote: true, id: :"like-button-#{micropost.id}") do %>
      <i class="fa-lg fas fa-heart icon-btn unlike"></i>
   <% end %>

<% else %>

   <%= link_to(micropost_add_path(micropost), method: :post, remote: true, id: :"like-button-#{micropost.id}") do %>
      <i class="fa-lg fas fa-heart icon-btn like"></i>
   <% end %>
<% end %>
<p>いいねの数:<%= micropost.likes.count %></p>
